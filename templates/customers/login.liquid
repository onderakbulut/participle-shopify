{{ 'customer.css' | asset_url | stylesheet_tag }}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <div class="customer login py-30">
                <h4 id="recover" tabindex="-1" class="text-center fw-bold mb-50"> {{ 'customer.recover_password.title'| t }}</h4>
                <div>
                    {%- form 'recover_customer_password' -%}
                        {% assign recover_success = form.posted_successfully? %}
                        <div class="mb-28">
                            <label class="ls-0.015em fs-14 fw-bold mb-7 ms-14" for="RecoverEmail">{{ 'customer.login.email' | t }}</label>
                            <input type="email" class="form-control bg-gallery py-14 px-lg-24 rounded-5px border-0 ls-0.015em lh-19 fw-bold" value="" name="email" id="RecoverEmail" required autocorrect="off" autocapitalize="off" autocomplete="email" {% if form.errors %}aria-invalid="true"aria-describedby="RecoverEmail-email-error"autofocus
                                {% endif %}placeholder="{{ 'customer.login.email' | t }}">
                        </div>
                        {%- if form.errors -%}
                            <small id="RecoverEmail-email-error" class="form__message">
                                <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
                                    <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                                    <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                                    <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                                    <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                                </svg>
                                {{ form.errors.messages['form'] }}
                            </small>
                        {%- endif -%}

                        <div class="mb-12">
                            <button class="btn btn-blue shadow-light w-100 ls-0.015em lh-19 fw-bold py-15">{{ 'customer.login.submit' | t }}</button>
                        </div>

                        <div class="mb-12">
                            <a href="#login" class="btn btn-warning shadow-light w-100 ls-0.015em lh-19 fw-bold py-15">
                                {{ 'customer.recover_password.cancel' | t }}
                            </a>
                        </div>

                    {%- endform -%}
                </div>

                <h4 id="login" tabindex="-1" class="text-center fw-bold mb-50">{{ 'customer.login.title' | t }}</h4>

                <div>
                    {%- if recover_success == true -%}
                        <h3 class="form__message" tabindex="-1" autofocus>
                            <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
                                <path d="M6.5 12.35C9.73087 12.35 12.35 9.73086 12.35 6.5C12.35 3.26913 9.73087 0.65 6.5 0.65C3.26913 0.65 0.65 3.26913 0.65 6.5C0.65 9.73086 3.26913 12.35 6.5 12.35Z" fill="#428445" stroke="white" stroke-width="0.7"/>
                                <path d="M5.53271 8.66357L9.25213 4.68197" stroke="white"/>
                                <path d="M4.10645 6.7688L6.13766 8.62553" stroke="white">
                            </svg>
                            {{ 'customer.recover_password.success' | t }}
                        </h3>
                    {%- endif -%}
                    {%- form 'customer_login' -%}
                        {%- if form.errors -%}
                            <h2 class="form__message" tabindex="-1" autofocus>
                                <span class="visually-hidden">{{ 'accessibility.error' | t }}
                                </span>
                                <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
                                    <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                                    <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                                    <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                                    <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                                </svg>
                                {{ 'general.contact.error_heading' | t }}
                            </h2>
                            {{ form.errors | default_errors }}
                        {%- endif -%}

                        <div class="mb-28">
                            <label class="ls-0.015em fs-14 fw-bold mb-7 ms-14" for="email"> {{ 'customer.login.email' | t }}</label>
                            <input type="email" class="form-control bg-gallery py-14 px-lg-24 rounded-5px border-0 ls-0.015em lh-19 fw-bold" name="customer[email]" id="CustomerEmail" autocomplete="email" autocorrect="off" autofocus
                        required autocapitalize="off" {% if form.errors contains 'form' %}aria-invalid="true"{% endif %}placeholder="{{ 'customer.login.email' | t }}">
                        </div>

                        {%- if form.password_needed -%}
                            <div class="mb-22">
                                <label class="ls-0.015em fs-14 fw-bold mb-7 ms-14" for="CustomerPassword">{{ 'customer.login.password' | t }}</label>
                                <div class="input-group bg-gallery rounded-5px overflow-hidden">
                                    <input type="password" class="form-control bg-gallery py-14 px-lg-24 border-0 ls-0.015em lh-19 fw-bold" value="" name="customer[password]" id="CustomerPassword" required autocomplete="current-password" {% if form.errors contains 'form' %}aria-invalid="true"{% endif %}placeholder="{{ 'customer.login.password' | t }}">
                                    <button type="button" class="btn btn-transparent border-0 rounded-0 unmask"> {% render 'icon-eye-slash' %} </button>
                                </div>
                                
                            </div>
                        {%- endif -%}

                        <div class="mb-12">
                            <button class="btn btn-blue shadow-light w-100 ls-0.015em lh-19 fw-bold py-15 rounded-100">{{ 'customer.login.submit' | t }}</button>
                        </div>

                        <div class="text-center mb-50">
                            <a class="text-lavendar fs-14 lh-17 ls-0.015em fw-bold text-decoration-underline" href="#recover">{{ 'customer.login.forgot_password' | t }}</a>
                        </div>

                    {%- endform -%}
                    <div class="mb-5 mt-5">
                        <a href="{{ routes.account_register_url }}" class="btn btn-dark shadow-light w-100 ls-0.015em lh-19 fw-bold py-15 rounded-100">{{ 'customer.login.create_account' | t }}</a>
                    </div>
                </div>

                {%- if shop.checkout.guest_login -%}
                    <div>
                        <hr>
                        <h2>{{ 'customer.login.guest_title' | t }}
                        </h2>

                        {%- form 'guest_login' -%}
                            <button>
                                {{ 'customer.login.guest_continue' | t }}
                            </button>
                        {%- endform -%}
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
</div>