<div 
    id="offcanvas-search" 
    class="offcanvas offcanvas-end offcanvas-mobile-full" 
    tabindex="-1" 
    aria-labelledby="offcanvas-search-label">
    <div class="offcanvas-header border-bottom border-alto">
        <h5 id="offcanvas-search-label" class="offcanvas-title fw-bold">
            {{ 'general.offcanvas_search.title' | t }}
        </h5>
        <button class="btn-close" type="button" data-bs-dismiss="offcanvas" aria-label="{{ 'general.accessibility.close' | t }}">
        </button>
    </div>
    <div class="offcanvas-body">
        <predictive-search>
            <form 
                action="{{ routes.search_url }}" method="get" role="search">
                <div class="form-control-wrapper">
                    <input
                        class="form-control bg-sand py-12 rounded-5 ps-28"
                        type="search"
                        name="q"
                        value="{{ search.terms | escape }}"
                        aria-describedby="predictive-search-alert"
                        aria-label="{{ 'general.offcanvas_search.input_label' | t }}"
                        placeholder="{{ 'general.offcanvas_search.input_label' | t }}"
                        data-search-collections="{{ settings.search_collections }}"
                        data-search-pages="{{ settings.search_pages }}"
                        data-search-articles="{{ settings.search_articles }}">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon-search" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="11" cy="11" r="8"></circle>
                        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                    </svg>
                </div>
                <input type="hidden" name="type" value="product">
            </form>
            <p 
                id="predictive-search-alert" 
                class="visually-hidden" 
                role="status"
                data-text-result-found="{{ 'general.offcanvas_search.result_found' | t }}"
                data-text-results-found="{{ 'general.offcanvas_search.results_found' | t }}"
                data-text-no-results="{{ 'general.offcanvas_search.no_results' | t }}">
            </p>
            <div id="predictive-search" tabindex="-1"></div>
        </predictive-search>
    </div>
    <div class="offcanvas-footer border-top p-3" hidden>
        <form action="{{ routes.search_url }}" method="get" role="search">
            <input type="hidden" name="q" value="">
            <input type="hidden" name="type" value="product">
            <button 
                class="btn btn-primary w-100 fw-bold py-12 rounded-5 shadow-light" 
                data-text-search-for="{{ 'general.offcanvas_search.search_for' | t }}"
                tabindex="-1">
                {{ 'general.offcanvas_search.search_for' | t }}
            </button>
        </form>
    </div>
</div>