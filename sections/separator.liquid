{% liquid 
    assign mt = section.settings.mt | prepend: 'mt-'
    assign mb = section.settings.mb | prepend: 'mb-'
%}

<div id="separator-{{ section.id }}" class="separator">
    <div class="{% unless section.settings.full_width %}container{% endunless %}">
        <hr style="opacity: {{ section.settings.opacity }};color:#D9D9D9; margin-bottom: {{section.settings.mb}}px; margin-top:{{section.settings.mt}}px">
    </div>
</div>
  
{% schema %}
{
    "name": "Separator",
    "settings": [
        {
            "type": "checkbox",
            "id": "full_width",
            "label": "Full width",
            "default": false
        },
        {
            "type": "range",
            "id": "opacity",
            "label": "Border opacity",
            "min": 0,
            "max": 1,
            "step": 0.1,
            "default": 0.1
        },
        {
            "type": "header",
            "content": "Spacing"
        },
        {
            "type": "range",
            "id": "mt",
            "label": "Margin top",
            "min": 0,
            "max": 50,
            "step": 1,
            "default": 0
        },
        {
            "type": "range",
            "id": "mb",
            "label": "Margin bottom",
            "min": 0,
            "max": 50,
            "step": 1,
            "default": 0
        }
    ],
    "presets": [
        {
            "name": "Separator",
            "category": "Layout"
        }
    ]
}
{% endschema %}