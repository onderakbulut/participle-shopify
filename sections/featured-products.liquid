{% liquid 
    assign pt = section.settings.pt | prepend: 'padding-top:' | append: 'px;' 
    assign pb = section.settings.pb | prepend: 'padding-bottom:' | append: 'px;' 
    assign mt = section.settings.mt | prepend: 'margin-top:' | append: 'px;' 
    assign mb = section.settings.mb | prepend: 'margin-bottom:' |append: 'px;' 

    assign row_xs = section.settings.breakpoint_xs | prepend: 'row-cols-'
    assign row_sm = section.settings.breakpoint_sm | prepend: 'row-cols-sm-'
    assign row_md = section.settings.breakpoint_md | prepend: 'row-cols-md-'
    assign row_lg = section.settings.breakpoint_lg | prepend: 'row-cols-lg-'
    assign row_xl = section.settings.breakpoint_xl | prepend: 'row-cols-xl-'
    assign row_xxl = section.settings.breakpoint_xxl | prepend: 'row-cols-xxl-'
%}

<section 
    id="featured-products-{{ section.id }}" 
    class="featured-products position-relative overflow-hidden {{ section.settings.bg_color }} {{ section.settings.text_align }}"
    style="{{pt}} {{ pb }} {{ mt }} {{ mb }}"
    >
    <div class="container">
        <h2 class="fs-25 font-ovo mb-34">
            {{ section.settings.title }}
        </h2>
        <div class="product-list row mb-0 {{ row_xs }} {{ row_sm }} {{ row_md }} {{ row_lg }} {{ row_xl }} {{ row_xxl }} {% if section.settings.mobile_scroll %}mobile-scroll{% endif %}">
            {% liquid
                for product in section.settings.products
                    render 'product-item', product: product
                endfor
            %}
        </div>
        {% if section.settings.btn_show %}
            <a 
                class="btn mt-62 mb-0 {{ section.settings.btn_color }} rounded-0 font-esteban fs-4 py-10 px-58" 
                href="{{ section.settings.btn_url }}">
                {{ section.settings.btn_text }}
            </a>
        {% endif %}
    </div>
</section>

{% schema %}
{
    "name": "Featured Products",
    "settings": [
        {
            "type": "product_list",
            "id": "products",
            "label": "Products"
        },
        {
            "type": "header",
            "content": "General"
        },
        {
            "type": "select",
            "id": "bg_color",
            "label": "Background color",
            "default": "",
            "options": [
                { "group": "Inherit", "value": "", "label": "Body" },
                { "group": "Light", "value": "bg-white text-dark", "label": "White" },
                { "group": "Light", "value": "bg-light text-dark", "label": "Light" }
            ]
        },
        {
            "type": "select",
            "id": "text_align",
            "label": "Text align",
            "default": "text-center",
            "options": [
                { "value": "text-start", "label": "Left" },
                { "value": "text-center", "label": "Center" }
            ]
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Featured Products"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description (optional)",
            "default": "<p>Add on optional description to this section</p>"
        },
        {
            "type": "select",
            "id": "description_size",
            "label": "Description size",
            "default": "fs-6",
            "options": [
                { "value": "fs-1", "label": "fs-1" },
                { "value": "fs-2", "label": "fs-2" },
                { "value": "fs-3", "label": "fs-3" },
                { "value": "fs-4", "label": "fs-4" },
                { "value": "fs-5", "label": "fs-5" },
