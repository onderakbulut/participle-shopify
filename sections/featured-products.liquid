            "min": 0,
            "max": 70,
            "step": 1,
            "default": 0
        },
        {
            "type": "range",
            "id": "mb",
            "label": "Margin bottom",
            "min": 0,
            "max": 70,
            "step": 1,
            "default": 0
        }
    ],
    "presets": [
        {
            "name": "Featured Products",
            "category": "Products"
        }
    ]
}
{% endschema %}